{
  "name": "tailwindcss-webpack-boilerplate",
  "version": "1.0.0",
  "description": "Webpack, TailwindCSS, PurgeCSS boilerplate",
  "main": "index.js",
  "scripts": {
    "clean": "rm -rf dist",
    "dev:run": "webpack-dev-server --mode=development --config webpack.config.js",
    "build:run": "export NODE_ENV=production && webpack --mode production",
    "start": "npm-run-all --parallel clean dev:run",
    "prod": "npm-run-all --parallel clean build:run"
  },
  "keywords": [],
  "author": "Panayot Angarev",
  "license": "ISC",
  "dependencies": {
    "const": "^1.0.0",
    "copy-webpack-plugin": "^6.2.1",
    "css-loader": "^4.3.0",
    "html-webpack-plugin": "^4.5.0",
    "imagemin-mozjpeg": "^9.0.0",
    "postcss-loader": "^4.0.4",
    "style-loader": "^2.0.0",
    "tailwindcss": "^1.8.13",
    "webpack": "^4.44.2",
    "webpack-cli": "^3.3.12"
  },
  "devDependencies": {
    "@babel/core": "^7.11.6",
    "@babel/preset-env": "^7.11.5",
    "babel-loader": "^8.1.0",
    "file-loader": "^6.1.1",
    "html-loader": "^1.3.2",
    "imagemin-webpack-plugin": "^2.4.2",
    "npm-run-all": "^4.1.5",
    "webpack-dev-server": "^3.11.0"
  }
